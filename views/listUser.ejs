<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User List</title>
  </head>
  <body>
    <% include ./partials/menubar %>
    <% users.forEach(user=>{ %>
      <table border="2px">
        <thead>
          <tr>
            <td>ID</td>
            <td>Username</td>
            <td>Email</td>
            <td>Role</td>
            <% if (role.role === "Admin"){ %>
            <td>Actions</td>
          <%  } %>
          </tr>        
        </thead>
        <tbody>
          <tr>
            <td><%- user._id %></td>
            <td><%- user.username %></td>
            <td><%- user.email %></td>
            <td><%- user.role %></td>
            <br>
            <% if (role.role === "Admin"){ %>
              
            <td><a href="/editProfile/<%- user._id %>">Edit Profile</a> || <a href="/deleteUser/<%- user._id %>">Delete</a></td>
            <%  } %>        
          </tr>      
        </tbody>
      </table>
  <%  }) %>
  </body>
</html>