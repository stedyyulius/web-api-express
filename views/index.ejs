
<!DOCTYPE html>
<html>
  <head>
    <title>Memo</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  <% include ./partials/menubar %>
    <h2>Add Memo</h2> 
    <form action="/createMemo" method="post">
      <input type="text" name="memo" placeholder="your new memo..">
      <button type="submit">Add</button>
    </form>
    <br>
    <br>
    <table border="2px">
      <thead>
        <tr>
          <td>NO</td>
          <td>Memo</td>
          <td>Created_At</td>
          <td>Actions</td>
        </tr>      
      </thead>
      <tbody>
        <tr>
          <% let i = 1; memos.forEach(memo=>{ %>  
          <td><%- i++ %></td>
          <td><%- memo.memo %></td>
          <td><%- memo.created_at %></td>
          <td><a href="/editMemo/<%- memo._id %>">Edit</a> || <a href="/deleteMemo/<%- memo._id %>" onClick = "return confirm('Are you sure you want to delete this Memo?')">Delete</a></td>
        </tr>    
      </tbody>
        <%  }) %>
    </table>
  </body>
</html>
